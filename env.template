# =============================================================================
# HASYX ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your values
# cp env.template .env

# =============================================================================
# HASURA CONFIGURATION
# =============================================================================
# Hasura GraphQL endpoint (public URL)
NEXT_PUBLIC_HASURA_GRAPHQL_URL=http://localhost:8080/v1/graphql

# Hasura admin secret (for server-side operations)
HASURA_ADMIN_SECRET=your_hasura_admin_secret_here

# Hasura JWT secret (for JWT authentication)
HASURA_JWT_SECRET=your_hasura_jwt_secret_here

# =============================================================================
# NEXT-AUTH CONFIGURATION
# =============================================================================
# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here

# NextAuth URL (your application URL)
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection URL
POSTGRES_URL=postgres://postgres:password@localhost:5432/postgres

# Alternative database URL (for compatibility)
DATABASE_URL=postgres://postgres:password@localhost:5432/postgres

# PostgreSQL individual parameters (if not using URL)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=postgres
PGSSLMODE=prefer

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Yandex OAuth
YANDEX_CLIENT_ID=your_yandex_client_id
YANDEX_CLIENT_SECRET=your_yandex_client_secret

# GitHub OAuth
GITHUB_ID=your_github_client_id
GITHUB_SECRET=your_github_client_secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# VK OAuth
VK_CLIENT_ID=your_vk_client_id
VK_CLIENT_SECRET=your_vk_client_secret

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================
# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Telegram WebApp Token (for Telegram Mini App)
TELEGRAM_WEBAPP_TOKEN=your_telegram_webapp_token

# =============================================================================
# AI/OPENROUTER CONFIGURATION
# =============================================================================
# OpenRouter API Key (for AI features)
OPENROUTER_API_KEY=your_openrouter_api_key

# =============================================================================
# DNS AND SSL CONFIGURATION
# =============================================================================
# Domain for DNS management
HASYX_DNS_DOMAIN=your-domain.com

# Alternative domain variable
DOMAIN=your-domain.com

# CloudFlare API Token
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# CloudFlare Zone ID
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Let's Encrypt email for SSL certificates
LETSENCRYPT_EMAIL=admin@your-domain.com

# Server IP for DNS records
HASYX_SERVER_IP=your_server_ip

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================
# Test token for development
TEST_TOKEN=your_test_token_here

# Node environment
NODE_ENV=development

# Port for development server
PORT=3000

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Build target (web, mobile, desktop)
NEXT_PUBLIC_BUILD_TARGET=web

# Base path for deployment
NEXT_PUBLIC_BASE_PATH=

# Main URL for the application
NEXT_PUBLIC_MAIN_URL=http://localhost:3000

# =============================================================================
# RESEND EMAIL SERVICE (OPTIONAL)
# =============================================================================
# Resend API Key for email notifications
RESEND_API_KEY=your_resend_api_key

# =============================================================================
# FIREBASE (OPTIONAL)
# =============================================================================
# Firebase configuration for notifications
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# =============================================================================
# PAYMENT PROCESSORS (OPTIONAL)
# =============================================================================
# Tinkoff Bank configuration
TINKOFF_TERMINAL_KEY=your_tinkoff_terminal_key
TINKOFF_SECRET_KEY=your_tinkoff_secret_key

# =============================================================================
# MISCELLANEOUS
# =============================================================================
# UUID for WebSocket tunnel (auto-generated if not set)
UUID=

# HID namespace for unique identifiers
NEXT_PUBLIC_HID_NAMESPACE=your-project-name 